<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Futterfabrik</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <style>
        html {
            background-color: #e9e9e9;
        }

        body {
            font-family: Ubuntu, sans-serif;
        }

        a {
            color: teal;
            text-decoration: none;
        }

        a:hover {
            text-decoration: underline;
        }

        .container {
            max-width: 500px;
            margin: 2rem auto;
            padding: 1rem;
            background-color: white;
            border-radius: 3px;
        }

        details {
            padding-top: 2rem;
            padding-bottom: .5rem;
        }

        summary {
            cursor: pointer;
            font-weight: bold;
            font-size: larger;
        }

        summary:hover {
            color: teal;
        }

        details > div {
            margin: 1.25rem 1rem .5rem 1rem;
            border-bottom: 1px solid #ccc;
        }

        .field {
            margin-bottom: .33rem;
        }

        .field > label.pre {
            min-width: 6rem;
            display: inline-block;
            text-align: right;
        }

        .field > input {
            margin-left: .5rem;
            margin-right: .5rem;
        }

        input:invalid {
            border: 1px solid red;
        }

        .field > label.post {
            color: #777;
        }

        .feed-links a {
            margin-left: 1rem;
            margin-right: 1rem;
            font-size: large;
            display: inline-block;
        }

        @media (prefers-color-scheme: dark) {
            html {
                background-color: #111;
            }

            body {
                color: #ccc;
            }

            .container {
                background-color: #333;
            }

            input {
                background: #333;
                color: white;
                border: 1px solid gray;
            }
        }
    </style>
</head>
<body>
<div class="container">
    <h1>Futterfabrik</h1>
    <p>RSS / JSON Feed Generator</p>
    <noscript>
        <div style="color:red">Javascript is disabled</div>
    </noscript>
    {% for feed in feeds %}
        <details>
            <summary>{{ feed.title }}</summary>
            <div>
                {% if feed.description %}
                    <p>{{ feed.description }}</p>
                {% endif %}
                {% for field in feed.fields %}
                    <div class="field">
                        <label class="pre" for="{{ field.name }}">{{ field.title }}</label>
                        <input type="{{ field.type }}" name="{{ field.name }}" title="{{ field.title }}"
                               autocomplete="off"
                                {% if field.required %}
                               required="required"
                                {% else %}
                               placeholder="optional"
                                {% endif %}
                                {% if field.min %} min="{{ field.min }}" {% endif %}
                               oninput='updateUrls({{ feed.name | tojson }})'
                               data-feed="{{ feed.name }}" data-field="{{ field.name }}"
                        />
                        <label class="post" for="{{ field.name }}">{{ field.info }}</label>
                    </div>
                {% endfor %}
                <p class="feed-links">
                    <a data-feed="{{ feed.name }}" data-format="rss" href="{{ build_feed_url('rss', feed) }}"
                       target="_blank" rel="noopener noreferrer">RSS</a>
                    <a data-feed="{{ feed.name }}" data-format="json" href="{{ build_feed_url('json', feed) }}"
                       target="_blank" rel="noopener noreferrer">JSON Feed</a>
                </p>
            </div>
        </details>
    {% endfor %}
</div>
<script>
    function updateUrls(feedName) {
        const params = new URLSearchParams()
        document.querySelectorAll('input[data-feed="' + feedName + '"]')
            .forEach(el => params.set(el.dataset.field, el.value))
        document.querySelectorAll('a[data-feed="' + feedName + '"]')
            .forEach(el => el.href = el.href.split('?')[0] + '?' + params.toString())
    }
</script>
</body>
</html>
